@page
@model Proiect_Loredana.Pages.Acquisitions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Acquisition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Acquisition.ID" />
            <div class="form-group">
                <label asp-for="Acquisition.ClientID" class="control-label"></label>
                <select asp-for="Acquisition.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Acquisition.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acquisition.GameID" class="control-label"></label>
                <select asp-for="Acquisition.GameID" class="form-control" asp-items="ViewBag.GameID"></select>
                <span asp-validation-for="Acquisition.GameID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acquisition.ReservationDate" class="control-label"></label>
                <input asp-for="Acquisition.ReservationDate" class="form-control" />
                <span asp-validation-for="Acquisition.ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
